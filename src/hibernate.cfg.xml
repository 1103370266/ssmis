<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.C3P0ConnectionProvider</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/ssmis</property>
        <property name="c3p0.min_size">1</property>
        <property name="c3p0.max_size">30</property>
        <property name="c3p0.time_out">1800</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="c3p0.max_statement">50</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="entity.Student"></mapping>
        <mapping class="entity.Course"></mapping>
        <mapping class="entity.TimeTable"></mapping>
        <mapping class="entity.Teacher"></mapping>
        <mapping class="entity.Admin"></mapping>
        <mapping class="entity.Score"></mapping>
        <mapping class="team.jiangtao.entity.AppealEntity"/>
        <mapping class="team.jiangtao.entity.CommentEntity"/>
        <mapping class="team.jiangtao.entity.CourseEntity"/>
        <mapping class="team.jiangtao.entity.CourseScheduleEntity"/>
        <mapping class="team.jiangtao.entity.CoursesTableEntity"/>
        <mapping class="team.jiangtao.entity.DepartmentEntity"/>
        <mapping class="team.jiangtao.entity.ExamEntity"/>
        <mapping class="team.jiangtao.entity.StudentEntity"/>
        <mapping class="team.jiangtao.entity.StudentCheduleEntity"/>
        <mapping class="team.jiangtao.entity.TeacherEntity"/>


    </session-factory>
</hibernate-configuration>