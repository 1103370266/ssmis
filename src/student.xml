<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="student" extends="ssmis-default" namespace="/student">
        <action name="login" class="studentAction" method="login">
            <result type="json" name="success">
                <param name="root">result</param>
            </result>
        </action>
        <action name="logout" class="studentAction" method="logout">
            <result>/student/login.jsp</result>
            <result name="error">/student/index.jsp</result>
        </action>
        <action name="getStuInfo" class="studentAction" method="getStuInfo">
            <result type="json">
                <param name="root">stu</param>
            </result>
            <result name="error" type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>